<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Profile</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-dark">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="#">User Dashboard</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div
          class="collapse navbar-collapse justify-content-end"
          id="navbarNav"
        >
          <ul class="navbar-nav">
            <li class="nav-item">
              <a
                href="/user/update-profile"
                class="nav-link btn btn-outline-warning me-2"
                >Update Profile</a
              >
            </li>
            <li class="nav-item">
              <a
                class="nav-link btn btn-outline-danger me-2"
                onclick="confirmLogout()"
                >Logout</a
              >
            </li>
            <li class="nav-item">
              <a
                href="/user/delete-profile"
                class="nav-link btn btn-outline-danger"
                >Delete Profile</a
              >
            </li>
            <% if (user.role === 'admin') { %>
            <li class="nav-item">
              <a href="/admin/users" class="nav-link btn btn-warning ms-2"
                >Admin Panel</a
              >
            </li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>

    <!-- User Info Section -->
    <div class="px-5 mt-5">
      <h2 class="text-light text-capitalize">Welcome, <%= user.fname %> üëã</h2>
    </div>

    <!-- Post Section -->
    <div
      class="container mt-5 text-light px-5"
      style="max-width: 50%; text-align: left; margin-left: 0"
    >
      <h4>Create a Post</h4>
      <form action="/user/post" method="post">
        <textarea
          class="form-control mt-2"
          id="postContent"
          rows="3"
          cols="5"
          placeholder="What's on your mind today..."
          name="content"
          required
        ></textarea>
        <input type="submit" value="Post" class="btn btn-primary mt-3 w-100" />
      </form>
    </div>

    <div
      class="container mt-5 text-light px-5"
      style="max-width: 50%; text-align: left; margin-left: 0"
    >
      <h4>Your Posts</h4>
      <% if (user.posts.length > 0) { user.posts.reverse().forEach(post => { %>
      <div
        class="card text-light mt-3 p-3"
        style="background: #82acff80; position: relative"
      >
        <!-- Top Section: Post Content & Date -->
        <div class="d-flex justify-content-between">
          <p class="fw-bold text-light"><%= post.content %></p>
          <p class="text-muted" style="font-size: 0.9rem">
            <%= post.date.toISOString().split('T')[0] %>
          </p>
        </div>

        <!-- Bottom Section: Like, Unlike, Edit, Delete -->
        <div class="d-flex justify-content-between align-items-center mt-2">
          <!-- Like & Unlike Buttons -->
          <div>
            <button class="btn btn-sm me-2">Like</button>
            <button class="btn btn-sm">Unlike</button>
          </div>

          <!-- Edit & Delete Icons
          <div>
            <a href="/edit/<%= post._id %>" class="btn btn-sm btn-warning">
              ‚úè
            </a>
            <a href="/delete/<%= post._id %>" class="btn btn-sm btn-danger">
              üóë
            </a>
          </div> -->
        </div>
      </div>
      <% }) %> <% } else { %>
      <p class="text-light">No posts yet. Start by creating one!</p>
      <% } %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
      function confirmLogout() {
        if (confirm("Are you sure you want to logout?")) {
          window.location.href = "/user/logout";
        }
      }
    </script>
  </body>
</html>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel - User Management</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Admin Panel</a>
        <div class="d-flex">
          <a href="/user/profile/<%= admin._id%>" class="btn btn-primary me-2"
            >Profile</a
          >
          <a onclick="confirmLogout()" class="btn btn-danger">Logout</a>
        </div>
      </div>
    </nav>

    <div class="container mt-5">
      <h2 class="text-center">Admin Panel - User Management</h2>

      <table class="table table-striped mt-4">
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Gender</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
          <tr>
            <td><%= user._id %></td>
            <td><%= user.fname %> <%= user.lname %></td>
            <td><%= user.email %></td>
            <td><%= user.gender %></td>
            <td>
              <!-- <a
                href="/admin/edit/<%= user._id %>"
                class="btn btn-warning btn-sm"
                >Edit
              </a> -->
              <a
                href="/admin/delete/<%=user._id%>"
                class="btn btn-danger btn-sm"
                >Delete
              </a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <script>
      function confirmLogout() {
        if (confirm("Are you sure you want to logout?")) {
          window.location.href = "/user/logout";
        }
      }
    </script>
  </body>
</html>
